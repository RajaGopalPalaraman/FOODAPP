<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_hotelspage_layout_padding"
    android:background="@android:color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hotelTitleTextVView"
        android:textSize="@dimen/activity_hotelspage_title_text_size"
        android:textColor="@android:color/black"
        android:paddingBottom="@dimen/activity_hotelspage_title_text_padding_bottom" />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/hotelViewParentLayout"/>

</LinearLayout>